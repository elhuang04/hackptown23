<body>
    <div class="chatbot-container">
        <div class="chatbot-header">
            <span style="color: white">Nutri</span><span style="color: orange">Ai</span><span style="color: white">d</span>
        </div>
        <div class="chatbot-body" id="chatbot-body">
            <div class="chatbot-message chatbot-message-bot">Hello! How can I help you?</div>
        </div>
        <div class="chatbot-footer">
            <input type="text" class="chatbot-input" id="chatbot-input" placeholder="Type your message...">
            <button class="chatbot-button" id="chatbot-send">Send</button>
        </div>
    </div>

    <script>
        const chatbotBody = document.getElementById("chatbot-body");
        const chatbotInput = document.getElementById("chatbot-input");
        const chatbotSendButton = document.getElementById("chatbot-send");

        function addMessage(message, type) {
            const messageElement = document.createElement("div");
            messageElement.classList.add("chatbot-message", type === 'bot-message' ? "chatbot-message-bot" : "chatbot-message
-message-user");
            messageElement.textContent = message;
            chatbotBody.appendChild(messageElement);
            chatbotBody.scrollTop = chatbotBody.scrollHeight;
        }

        function sendMessageToChatGPTAPI(message) {
            // use fetch API to send message to Chat GPT API
            // replace API_ENDPOINT with your Chat GPT API endpoint
            fetch('API_ENDPOINT', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    message: message
                })
            })
            .then(response => response.json())
            .then(data => {
                // receive response from Chat GPT API
                const botMessage = data.message;
                addMessage(botMessage, 'bot-message');
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        chatbotSendButton.addEventListener('click', () => {
            const userMessage = chatbotInput.value.trim();
            if (!userMessage) return;
            addMessage(userMessage, 'user-message');
            chatbotInput.value = '';

            // send message to Chat GPT API and receive response after 1 second delay
            setTimeout(() => {
                sendMessageToChatGPTAPI(userMessage);
            }, 1000);
        });

        chatbotInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                chatbotSendButton.click();
            }
        });
    </script>
</body>
</html>
